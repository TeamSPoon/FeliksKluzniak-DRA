PACKAGE=dra
include ../Makefile.defs

DRADIR=$(PLLIBDIR)/dra
EXDIR=$(PKGEXDIR)/dra

LIBPL= dra.pl
DRAPL= dra.pl
EXAMPLES=


all:		drapl

drapl:		dra.pl
		cp $< $@

install:	all $(DESTDIR)$(PLLIBDIR)
		mkdir -p $(DESTDIR)$(DRADIR)
		$(INSTALL_DATA) $(LIBPL) $(DESTDIR)$(DRADIR)
		$(INSTALL_DATA) $(DRAPL) $(DESTDIR)$(PLLIBDIR)/dra.pl
		$(INSTALL_DATA) README   $(DESTDIR)$(DRADIR)/README$(TXTEXT)
		$(MKINDEX)

$(DESTDIR)$(PLLIBDIR):
		mkdir $@

ln-install::
		@$(MAKE) INSTALL_DATA='../ln-install' install

rpm-install:	install

pdf-install:	install-examples

html-install:	install-examples

install-examples::
		mkdir -p $(DESTDIR)$(EXDIR)
		(cd Examples && $(INSTALL_DATA) $(EXAMPLES) $(DESTDIR)$(EXDIR))

uninstall:
		(cd $(PLBASE)/library && rm -f $(LIBPL))
		@IN_SWI@$$(PL) -f none -g make -t halt

check:		dra.pl
		$(PL) -q -f none -s dra_test.pl -g test,halt -t 'halt(1)'


################################################################
# Clean
################################################################

clean:
		rm -f *~ *.o *.@SO@ *% config.log

distclean:	clean
		rm -f config.h config.cache config.status Makefile
		rm -f $(TEX)
		../../man/runtex --clean $(DOC)
